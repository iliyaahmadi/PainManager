@model IEnumerable<Domain.Entities.Task>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="text-white mb-0">
                <i class="fas fa-clipboard-list me-2"></i>My Tasks
            </h1>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Add New Task
            </a>
        </div>
    </div>
</div>

@if (!Model.Any())
{
    <div class="text-center py-5">
        <i class="fas fa-inbox fa-4x text-white-50 mb-3"></i>
        <h3 class="text-white">No tasks yet</h3>
        <p class="text-white-50">Create your first task to get started!</p>
        <a asp-action="Create" class="btn btn-primary btn-lg">
            <i class="fas fa-plus me-2"></i>Create Your First Task
        </a>
    </div>
}
else
{
    <div class="row">
        @foreach (var task in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <h5 class="card-title mb-0 @(task.IsCompleted ? "task-completed" : "")">
                                @task.Title
                            </h5>
                            @if (task.IsCompleted)
                            {
                                <span class="badge bg-success">
                                    <i class="fas fa-check me-1"></i>Completed
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">
                                    <i class="fas fa-clock me-1"></i>Pending
                                </span>
                            }
                        </div>

                        <p class="card-text flex-grow-1 @(task.IsCompleted ? "task-completed" : "")">
                            @task.Description
                        </p>

                        <div class="mt-auto">
                            <div class="btn-group w-100" role="group">
                                <a asp-action="Edit" asp-route-id="@task.Id" class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-edit me-1"></i>Edit
                                </a>
                                <form asp-action="Delete" asp-route-id="@task.Id" method="post" class="d-inline" id="deleteForm_@task.Id">
                                    <button type="button" class="btn btn-outline-danger btn-sm"
                                            onclick="deleteTask(@task.Id)">
                                        <i class="fas fa-trash me-1"></i>Delete
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

@section Scripts {
    <script>
        function deleteTask(taskId) {
            if (confirm('Are you sure you want to delete this task?')) {
                document.getElementById('deleteForm_' + taskId).submit();
            }
        }
    </script>
}